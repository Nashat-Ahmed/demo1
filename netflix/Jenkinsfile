pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building...'
                    sh 'sudo docker run --rm -v "$PWD":/usr/src/app -w /usr/src/app node:14 npm install'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'Running Tests...'
                    sh 'sudo docker run --rm -v "$PWD":/usr/src/app -w /usr/src/app node:14 npm test'
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    echo 'Building Docker Image...'
                    sh 'sudo docker build -t nashaat111/netflix-app:latest .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    echo 'Pushing Docker Image to Registry...'
                    sh 'sudo docker login -u nashaat111 -p Nashaat123#'
                    sh 'sudo docker push your-dockerhub-username/netflix-app:latest'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo 'Deploying to Kubernetes...'
                    sh 'sudo kubectl apply -f k8s/deployment.yaml'
                    sh 'sudo kubectl apply -f k8s/service.yaml'
                }
            }
        }
    }
}

